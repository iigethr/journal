= form_for [@article, @video] do |f|
  - if @video.errors.any?
    #error_explanation
      %h2= "#{pluralize(@video.errors.count, "error")} prohibited this video from being saved:"
      %ul
        - @video.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :caption
    = f.text_field :caption
  .actions
    = f.submit 'Save'
= @article
