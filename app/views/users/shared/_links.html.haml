/* Links */

.form-nav
  .form-nav-box
    - if devise_mapping.registerable? && controller_name != "registrations"
      .form-nav-item
        = link_to new_registration_path(resource_name), class: "button extra-large purple wide" do
          %span.no-underline New to Journal?
          %span.underline Sign up
      .separator.double-extra-small
    - if controller_name != "sessions"
      .form-nav-item
        = link_to "Log in", new_session_path(resource_name), class: "link gray underline"
    - if devise_mapping.recoverable? && controller_name != "passwords" && controller_name != "registrations"
      .form-nav-item
        = link_to "Forgot your password?", new_password_path(resource_name), class: "link gray underline"
    - if devise_mapping.confirmable? && controller_name != "confirmations"
      .form-nav-item
        = link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), class: "link gray underline"
    - if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != "unlocks"
      .form-nav-item
        = link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name), class: "link gray underline"
    - if devise_mapping.omniauthable?
      - resource_class.omniauth_providers.each do |provider|
        .form-nav-item
        = link_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), class: "link gray underline"
