/* Form New */

= form_for resource, as: resource_name, url: registration_path(resource_name) do |form|
  - if params[:action] == "new" || params[:action] == "create"
    = form.hidden_field :active, value: true
  %fieldset
    .form-row
      %legend Sign up

    = form.fields_for :profile do |item|
      .form-row
        .field.col-extra-small-1-1
          = item.label :name
          .input
            = item.text_field :name, autofocus: true

    .form-row
      .field
        = form.label :email
        .input
          = form.email_field :email
    .form-row
      .field
        = form.label :password do
          Password
          - if @minimum_password_length
            %i.label-reference
              = @minimum_password_length
              characters minimum
        .input
          = form.password_field :password, autocomplete: "new-password"
    .form-row
      .field
        = form.label :password_confirmation
        .input
          = form.password_field :password_confirmation, autocomplete: "new-password"
    .form-row
      .field
        .submit.left
          = form.button "Sign up", data: { disable_with: "Connecting..." }, class: "button extra-large blue wide"
    .field-row
      = render "users/shared/links"
