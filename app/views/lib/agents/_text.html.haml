/* Text */

.agent-top
.agent-middle
  = text.try(:body)
.agent-bottom
  .secondary-actions
    .secondary-actions-box
      .secondary-actions-item
        = link_to article_text_path(parent, text), method: :delete, data: { confirm: "Are you sure?" }, class: "button small red" do
          Destroy
      .secondary-actions-item
        = link_to edit_article_text_path(parent, text), class: "button small yellow" do
          Edit Agent
