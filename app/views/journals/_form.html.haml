/* Form */

= form_with model: journal, local: true do |form|
  = errors(journal)
  %fieldset
    - if params[:action] == "new" || params[:action] == "create"
      .form-row
        %legend New Journal
    .form-row
      .field
        = form.label :title
        .input
          = form.text_field :title
    .form-row
      .field
        = form.label :description
        .textarea
          = form.text_area :description
    = submit_and_published(form, "Save")
