/* Aside navigation */

.aside-navigation
  .aside-navigation-box
    .aside-navigation-item.border-bottom
      %h4 Journal
    .aside-navigation-item
      = link_to "Edit", edit_journal_path(journal), class: "link blue"
    .aside-navigation-item
      = link_to "Preview", preview_journal_path(journal), class: "link blue"
    .aside-navigation-item
      = link_to "Endpoint", preview_journal_path(journal, format: "json"), class: "link blue", target: :blank

.aside-navigation
  .aside-navigation-box
    .aside-navigation-item.border-bottom
      %h4 Assets
    .aside-navigation-item
      = link_to "Cover", edit_journal_path(journal, cover: true), class: "link blue"
    .aside-navigation-item
      = link_to "Thumb", edit_journal_path(journal, thumb: true), class: "link blue"
