/* Show */

.container-top
  = breadcrumbs(journals_path)
.container-middle
  .board-double-extra-small
    = render "aside_navigation", journal: @journal
  .board-medium
    .content
      .content-box
        - if @journal.title.presence
          .content-item
            %h3.lighter= @journal.title
        - if @journal.description.presence
          .content-item
            = @journal.description

    .primary-actions
      .primary-actions-box
        .primary-actions-item
          = link_to "Sections", journal_sections_path(@journal), class: "button blue"
.container-bottom
  = danger_zone("Journal", journal_path(@journal))

.page-header
  .page-header-box
    .page-header-block
      .page-header-top
        .text.extra-small.bold.blue-500-cl Journal
        %h2.lighter
          = @journal.title
        .page-header-menu
          .page-header-menu-box
            .page-header-menu-block
              = link_to "Metadata", root_path, class: "link left underline"
            .page-header-menu-block
              = link_to "Icon", root_path, class: "link left underline"
            .page-header-menu-block
              = link_to "Thumb", root_path, class: "link underline"
            .page-header-menu-block
              = link_to "Cover", root_path, class: "link underline"
