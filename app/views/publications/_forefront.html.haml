        %h1.font-xxl.lighter.text-center
          Publications
        .separator-xs
        .forefront-menu.center-h
          .forefront-menu-box
            .forefront-menu-block
              = link_to "All", publications_path, class: "link-s underline"
            .forefront-menu-block
              = link_to "Published", publications_path, class: "link-s underline"
