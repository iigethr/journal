/* Form */

= form_with model: publication, local: true do |form|
  = errors(publication)
  %fieldset
    - if params[:action] == "new" || params[:action] == "create"
      .form-row
        %legend New Publication
    .form-row
      .field
        = form.label :title
        .input
          = form.text_field :title
    .form-row
      .field
        = form.label :description
        .textarea
          = form.text_area :description, class: "altai-autosize"
    = submit_and_published(form, "Save")
