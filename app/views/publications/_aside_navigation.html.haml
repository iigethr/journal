/* Aside navigation */

- if @passkey.role == "owner"
  .aside-navigation
    .aside-navigation-box
      .aside-navigation-item
        = link_to "Main", publication_path(publication), class: "link blue #{active_class(controller: "publications", action: "show")}"
      .aside-navigation-item
        = link_to "Cover", publication_path(publication, cover: true), class: "link blue #{active_class(controller: "publications", action: "show")}"
      .aside-navigation-item
        = link_to "Thumb", publication_path(publication, thumb: true), class: "link blue #{active_class(controller: "publications", action: "show")}"

.aside-navigation
  .aside-navigation-box
    .aside-navigation-item
      = link_to preview_publication_path(publication), class: "button white wide" do
        Preview
