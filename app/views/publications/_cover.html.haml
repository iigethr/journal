/* Form */

= form_with model: publication, local: true do |form|
  = errors(publication)
  %fieldset
    - if resource.presence
      .form-row
        .field.col-medium-1-1
          = image_tag url_for(resource), class: "center-h"
        .field.col-medium-2-1.center-h
          = link_to destroy_cover_publication_path(publication, resource), method: :delete, data: { confirm: "Are you sure?" }, class: "button large red wide" do
            Remove Cover
    - unless resource.presence
      .form-row
        .field
          .file
            = form.file_field :cover, id: "upload"
            = form.label :cover, "Upload Cover", for: "upload", class: "button large blue wide"
      = submit_button(form, "Save")
