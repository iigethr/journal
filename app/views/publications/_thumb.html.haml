/* Form */

= form_with model: publication, local: true do |form|
  = errors(publication)
  %fieldset
    - if resource.presence
      .form-row
        .field.col-medium-1-1
          = image_tag url_for(resource), class: "altai-center"
        .field.col-medium-2-1.altai-center
          = link_to destroy_thumb_publication_path(publication, resource), method: :delete, data: { confirm: "Are you sure?" }, class: "button large red wide" do
            Remove Thumb
    - unless resource.presence
      .form-row
        .field
          .file
            = form.file_field :thumb, id: "upload"
            = form.label :thumb, "Upload Thumb", for: "upload", class: "button large blue wide"
      = submit_button(form, "Save")
