= form_with model: [@publication, @article], local: true do |f|
  - if params[:action] == "new" || params[:action] == "create"
    = f.hidden_field :publication_id, value: @publication.id
  %fieldset
    .form-row
      .field
        = f.label :title
        .input
          = f.text_field :title
    .form-row
      .field
        = f.label :description
        .textarea
          = f.text_area :description
    .form-row
      .field
        .checkbox
          = f.check_box :published
          = f.label :published
    .form-row
      .field
        .submit
          = f.button "Save", data: { disable_with: "Connecting..." }, class: "button extra-large blue wide"
