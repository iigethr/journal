%h1 Listing articles

%table
  %thead
    %tr
      %th Title
      %th Description
      %th Published
      %th Position
      %th
      %th
      %th

  %tbody
    - @articles.each do |article|
      %tr
        %td= article.title
        %td= article.description
        %td= article.published
        %td= article.position
        - if params[:publication_id]
          %td= link_to "Show", article_path(article)
          %td= link_to "Edit", edit_article_path(article)
          %td= link_to "Destroy", article_path(article), method: :delete, data: { confirm: "Are you sure?" }

- if params[:publication_id]
  = link_to "New Article", new_publication_article_path(@publication)
