%h1 Listing articles

%table
  %thead
    %tr
      %th Publication
      %th Title
      %th Description
      %th Published
      %th Position
      %th
      %th
      %th

  %tbody
    - @articles.each do |article|
      %tr
        %td= article.publication
        %td= article.title
        %td= article.description
        %td= article.published
        %td= article.position
        %td= link_to "Show", publication_article_path(@publication, article)
        %td= link_to "Edit", edit_publication_article_path(@publication, article)
        %td= link_to "Destroy", publication_article_path(@publication, article), method: :delete, data: { confirm: "Are you sure?" }

%br

= link_to "New Article", new_publication_article_path(@publication)
