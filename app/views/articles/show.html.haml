/* Show */

.container-top
  .wrap.wide
    = breadcrumbs(publication_articles_path(@article.publication.slug))
  .wrap.wide
    .content
      .content-box
        .content-item
          %h2.lighter Article
.container-middle.altai-center
  .board-double-extra-small
    = render "aside_navigation", article: @article
  .board-medium
    .content
      .content-box
        .content-item
          %h1.lighter= @article.title
    .agent
      .agent-box.sortable{ "data-url": sortable_publication_article_agents_path(@publication, @article) }
        - @agents.each do |agent|
          // = agent.act_type
          - case agent.act_type
          - when "Picture"
            - @get_picture = Text.where(id: agent.act_id).first
          - when "Text"
            - @get_picture = Picture.where(id: agent.act_id).first
          = @get_picture
          // = render_agent(@article, agent)
.container-bottom
  .content
    .content-box
      .content-item.altai-center
        = danger_zone("Article", publication_article_path(@publication, @article))
