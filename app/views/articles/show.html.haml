/* Show */

.container-top
  .wrap.wide
    = breadcrumbs(publication_articles_path(@article.publication.slug))
  .wrap.wide
    .content
      .content-box
        .content-item
          %h2.lighter Article
.container-middle.altai-center
  .board-double-extra-small
    = render "aside_navigation", article: @article
  .board-medium
    .content
      .content-box
        .content-item
          %h1.lighter= @article.title
    .agent
      .agent-box.sortable{ "data-url": sortable_publication_article_agents_path(@publication, @article) }
        - @assets.each do |asset|
          = render_agent(asset)
    .content
      .content-box
        .content-item
          = danger_zone("Article", publication_article_path(@publication, @article))
.container-bottom
