/* Aside Navigation */

.aside-navigation
  .aside-navigation-box
    .aside-navigation-item
      = link_to section_path(section), class: "button white wide" do
        Show
    .aside-navigation-item
      = link_to preview_section_path(section), class: "button white wide" do
        Preview
    - if @agents.presence
      .aside-navigation-item
        = link_to "toggle", "#", class: "altai-off toggle-btn", class: "altai-off toggle-btn button white wide #{active_class(controller: "publications", action: "show")}"
.aside-navigation
  .aside-navigation-box
    .aside-navigation-item
      = link_to "Metadata", edit_section_path(section, main: true), class: "link blue"
    .aside-navigation-item
      = link_to "Text", new_section_text_path(section), class: "link blue"
    .aside-navigation-item
      = link_to "Image", new_section_picture_path(section), class: "link blue"
