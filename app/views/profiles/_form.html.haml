/* Form */

= form_with model: object, local: true do |form|
  = errors(object)
  %fieldset
    .form-row
      %legend Profile
    .form-row
      .field
        = form.label :first_name
        .input
          = form.text_field :first_name
    .form-row
      .field
        = form.label :middle_name
        .input
          = form.text_field :middle_name
    .form-row
      .field
        = form.label :last_name
        .input
          = form.text_field :last_name
    = submit_button(form, "Save")
